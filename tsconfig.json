{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,  
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "sourceMap": true,
    "declaration": true,
    "lib": ["ES5", "ES6", "DOM"],
    "rootDir": "src"
  },
  "include": [
    "src/**/*.ts"
  ]
}
